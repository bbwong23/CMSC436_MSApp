<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.bethanywong.msapp.MainActivity"
    android:weightSum="1">

    <Button
        android:id="@+id/devinfo_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:background="@android:color/holo_green_light"
        android:text="Set User ID"
        android:textSize="10pt"
        android:layout_marginBottom="10pt"/>

    <Button
        android:text="Tap Test"
        android:textSize="10pt"
        android:layout_height="wrap_content"
        android:id="@+id/tap_button"
        android:layout_width="match_parent"
        android:layout_weight="0.05"/>
    <Button
        android:text="Spiral Test"
        android:textSize="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spiral_button"
        android:layout_weight="0.05"/>
    <Button
        android:text="Level Test"
        android:textSize="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/level_button"
        android:layout_weight="0.05" />
    <Button
        android:text="Balloon Test"
        android:textSize="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/balloon_button"
        android:layout_weight="0.05" />
    <Button
        android:text="Curl Test"
        android:textSize="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/curl_button"
        android:layout_weight="0.05" />
    <Button
        android:text="Sway Test"
        android:textSize="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sway_button"
        android:layout_weight="0.05" />
    <Button
        android:text="Step Test"
        android:textSize="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/step_button"
        android:layout_weight="0.05" />


</LinearLayout>
